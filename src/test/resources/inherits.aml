//  test/inheritance.aml
#!aml

// Base object definition
BaseBlock := {
    name := "Base"
    value := 10
    hardness := 5
    drop := item:BaseItem
    dropChance := 0.5
    dropRange := (1, 3)
}

// Derived object that inherits from BaseObject
DerivedBlock:BaseBlock := {
    name := "Derived"
    value := 20
    // Inherits hardness from BaseBlock
    drop := item:DerivedItem
    dropChance := 0.8
    // Inherits dropRange from BaseBlock
}